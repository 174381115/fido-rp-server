<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="FILE-LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${logging.file.dir}/Relying_Party.log</file>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<Pattern>
				%date [%10.10thread] [%5.5level] [%36.36logger] - %msg%n
			</Pattern>
		</encoder>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<!-- rollover daily -->
			<fileNamePattern>Relying_Party_Debug.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy	class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>10MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
		</rollingPolicy>
	</appender>

	<logger name="com.daon" level="debug" additivity="false">
		<appender-ref ref="FILE-LOG" />
	</logger>

	<root level="error">
		<appender-ref ref="FILE-LOG" />
	</root>

</configuration>